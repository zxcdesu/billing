// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Wallet {
  projectId      Int              @id
  country        String
  currency       String           @default("USD")
  currentBalance Decimal          @default(0) @db.Decimal(15, 6)
  messagingQuota MessagingQuota[]
  subscription   Subscription?
  transactions   Transaction[]
  payments       Payment[]
}

enum TransactionType {
  BIC
  UIC
}

model Transaction {
  id        String          @id @default(uuid()) @db.Uuid
  projectId Int
  wallet    Wallet          @relation(fields: [projectId], references: [projectId], onDelete: Cascade)
  type      TransactionType
  bill      Decimal         @db.Decimal(15, 6)
  billable  Boolean
  createdAt DateTime        @default(now())

  @@unique([projectId, id])
  @@index([type])
  @@index([createdAt])
}

model MessagingQuota {
  projectId Int
  wallet    Wallet @relation(fields: [projectId], references: [projectId], onDelete: Cascade)
  channelId Int
  value     Int    @default(0)
  year      Int
  month     Int

  @@id([projectId, channelId, year, month])
  @@index([channelId])
  @@index([year])
  @@index([month])
}

model Subscription {
  projectId Int      @id
  wallet    Wallet   @relation(fields: [projectId], references: [projectId], onDelete: Cascade)
  expiresAt DateTime
}

enum PaymentStatus {
  Pending
  Succeeded
  Canceled
}

model Payment {
  id        String        @id
  projectId Int
  wallet    Wallet        @relation(fields: [projectId], references: [projectId], onDelete: Cascade)
  status    PaymentStatus
  amount    Decimal       @db.Decimal(15, 6)

  @@unique([projectId, id])
  @@index([projectId])
}
