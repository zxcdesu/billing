    "@nestjs/passport": "^9.0.2",
    "@nestjs/platform-fastify": "^9.3.7",
    "@nestjs/schedule": "^2.2.0",
    "@prisma/client": "^4.10.0",
    "amqp-connection-manager": "^4.1.10",
    "amqplib": "^0.10.3",
    "axios": "^1.3.2",
    "cache-manager": "^5.1.6",
    "class-transformer": "^0.5.1",
